{% extends 'template.html.twig' %}

{% block title %}Hello PersonController!{% endblock %}
{% block bodyTitle %}Liste des personnes{% endblock %}
{% block body %}
<div class="row">
    {% for personne in personnesAll%}
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">{{ personne.firstname }}</h5>
            <h6>{{ personne.firstname }} {{ personne.lastname }}</h6>
            <p class="card-text">Age : {{ personne.age }} ans</p>
            <a href="{{ path('person.detail', {id: personne.id}) }}">Details</a>
        </div>
    </div>
    {% endfor %}
    {% if isPaginated %}
    <ul class="pagination">
        {% if page != 1 %}
            <li class="page-item">
                <a class="page-link" href="{{ path('person.all' , {page : page -1, size: size}) }}">
                    Previous
                </a>
            </li>
        {% endif %}
        {% for index in range(1, pages) %}
            <li class="page-item">
                <a class="page-link" href="{{ path('person.all', {page: index, size: size}) }}">
                    {{ index }}
                </a>
            </li>
        {% endfor %}
        {% if page != pages %}
            <li class="page-item">
                <a class="page-link" href="{{ path('person.all', {page: page + 1, size: size}) }}">
                    Next
                </a>
            </li>
        {% endif %}
    </ul>
    {% endif %}
</div>
{% endblock %}
